

<h1>THE NEW MINE CART PAGE</h1>
<h1>HEllow MANU from THE CART file placed in Templates Folder</h1>
<h2>Below is the Structure of Cart </h2>
<br><br>
<h2>YOUR CART ({{ cart.item_count }})</h2>

{% if cart.empty? %}
  <p>Your Cart IS empty</p>
  <a href="/collections/all">CONTINUE SHOPPING</a>
  {% else %}
{% form 'cart' ,cart %}

{% for item in cart.items %}
  <div>
    <img src = "{{ item.image | image_url : width : 200 }}">
    <h2>{{ item.title }}</h2>
    <p>{{ item.price | money }}</p>
    <input name = "updates[]" value = "{{ item.quantity }}">
  </div>
    <a href = "{{ item.url_to_remove }}">REMOVE</a>
{% endfor %}
  <hr>
  <p>TOTAL:{{ cart.total_price |money }}</p>
  <button type="submit"  name = "update">UPDATE</button>
  <button type="checkout"  name = "checkout">CHECKOUT</button>
{% endform %}
  {% endif %}
  



